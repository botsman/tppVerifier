    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Start server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "server/run.go",
            "env": {
                "MONGO_URL": "mongodb://localhost:27017",
                "MONGO_DB": "app",
                "PORT": "8080",
            }
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        }
    ]
}
