    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Start server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "server/run.go",
            "env": {
                "DATABASE_URL": "mongodb://localhost:27017/tppVerifier",
                "AUTH_HEADER_NAME": "X-RapidAPI-Proxy-Secret",
                "AUTH_HEADER_VALUE": "secret"
            }
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        }
    ]
}
